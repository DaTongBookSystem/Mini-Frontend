<view class="js_index">
  <!-- 搜索框 开始 -->
  <Searchinput></Searchinput>
  <!-- 搜索框 结束 -->

  <!-- 置顶图片开始 -->
  <view class="index_zhiding">
  <image mode="widthFix" src="https://zmcm.oss-cn-zhangjiakou.aliyuncs.com/top.jpg"></image>
  </view>
  <!-- 置顶图片结束 -->

  <!-- 轮播图 开始 -->
  <view class="index_swiper">
  <!-- 
    1 swiper标签存在默认的宽度和高度
      100% * 150px
    2 image标签也存在默认的宽度和高度
      320px * 240px
    3 设计图片和轮播图
      1 先看一下原图的宽高 750 * 340
      2 让图片高度自适应 宽度 等于%100
      3 让swipe标签的高度 变成和图片的高一样即可
    4图片标签
      mode属性 渲染模式
        widthFix 让图片的标签宽高 和 图片标签的内容的宽高都等比例的发生变化
   -->
    <swiper autoplay="{{true}}" indicator-dots="{{true}}" circular="{{true}}" interval="5000" duration="500">
    <swiper-item
    wx:for="{{swiperList}}"
    wx:key="goods_id"
    >
      <navigator url="{{item.linkTo}}">
      <image mode="widthFix" src="{{item.imgUrl}}">
      </image>
      </navigator>
    </swiper-item>
    </swiper>
  </view>
  <!-- 轮播图 结束 -->

  <!-- 导航 开始 -->
  <view class="index_cate">
    <navigator
    wx:for="{{catesList}}"
    wx:key="name"
    url="/pages/category/index"
    open-type="switchTab"
    >
    <image src="{{item.imgUrl}}" mode="widthFix" >
    </image>
    <text>
    {{item.name}}
    </text>
    </navigator>
  </view>
  <!-- 导航 结束 -->

  <!-- 楼层 开始 -->
  <view class="index_floor">
    <view class="floor_group"
    wx:for="{{floorList}}"
    wx:for-item="item1"
    wx:for-index="index1"
    wx:key="categoryDetail"
    >
      <!-- 标题 -->
      <view class="floor_title">
        <image mode="widthFix" src="{{item1.categoryDetail.homeImgUrl}}">
        </image>
      </view>
      <!-- 内容 -->
      <view class="floor_list">
        <navigator
        wx:for="{{item1.productList}}"
        wx:for-item="item2"
        wx:for-index="index2"
        wx:key="name"
        url="{{item2.navigator_url}}"
        >
        <image src="{{item2.mainImgUrl}}" mode="{{index2===0?'widthFix':'scaleToFill'}}" >
        </image>
        </navigator>
      </view>
    </view>
  </view>
  <!-- 楼层 结束 -->
</view>